---
import '../styles/global.css'; // <-- This is the correct way to import the styles.
import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <ViewTransitions />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">


    <style is:global>
    /* --- Mobile Styles (for screens 768px or smaller) --- */
    .mobile-only-break { display: none; }
    
    @media (max-width: 768px) {
    /* NEW: Show the line break only on mobile */
    .mobile-only-break {
      display: block;
    }

    /* --- Hero Section Mobile Layout --- */
    .hero-text {
      order: 2; /* Place text below the image */
    }
    .hero-image {
      order: 1; /* Place image above the text */
      margin-top: 0;
      margin-bottom: 2rem; /* Add space below the image */
    }
    /* 1. HERO SECTION: Stack text and image vertically */
    .hero {
      flex-direction: column;
      text-align: center;
      padding: 3rem 1.5rem; /* Reduced padding */
    }

    /* 2. HEADER: Hide complex links for a cleaner look */
    /* NOTE: You'll eventually want a hamburger menu here */
    .nav-links {
      display: none;
    }
    header, .final-cta, .features, .stats-container {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    /* 3. FONT SIZES: Make typography smaller for mobile */
    h1, .hero .headline {
      font-size: 2.25rem; /* was 3.5rem */
    }
    h2, .final-cta h2 {
      font-size: 2rem; /* was 2.5rem */
    }

    .stats-grid {
    flex-wrap: wrap;       /* Allow items to wrap to the next line */
    justify-content: center; /* Center the items */
    gap: 2rem;
    }
  .stat-item {
    flex: 1 1 150px;       /* Allow items to grow and shrink, with a base size */
    border-right: none;    /* Ensure no borders on mobile */
  }
    /* 6. FEATURE SHOWCASE (Dropdown): Change from 3 columns to 1 */
    .showcase-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .feature-showcase {
      padding: 1.5rem;
      top: 70px; /* Adjust position relative to header */
    }
  }
</style>
  </head>
  <body>
    <slot />
    <script src="../scripts/scroll-animations.js"></script>
  </body>
</html>