---
import FeatureShowcase from './FeatureShowcase.astro';
---
<header>
  <nav>
    <a href="/" class="logo">DrishtiAI</a>

    <button class="hamburger-menu" aria-label="Open menu" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
    
    <div class="nav-links">
      <a href="#" id="learn-more-btn">Learn More</a>
      <a href="/blog">Blog</a>
      <a href="/contact">Contact</a>
      <a href="/privacy-policy">Privacy Policy</a>
    </div>
  </nav>
</header>

<FeatureShowcase />

<script>

  document.addEventListener('astro:page-load', () => {
    // --- Element Selectors ---
    const learnMoreBtn = document.getElementById('learn-more-btn');
    const featureShowcase = document.getElementById('feature-showcase');
    const hamburgerBtn = document.querySelector('.hamburger-menu');
    const navLinks = document.querySelector('.nav-links');

    // --- Logic for Feature Showcase Dropdown ---
    if (learnMoreBtn && featureShowcase) {
      learnMoreBtn.addEventListener('click', (e) => {
        e.preventDefault();
        featureShowcase.classList.toggle('is-open');
      });
    }

    // --- Logic for Hamburger Menu Toggle ---
    if (hamburgerBtn && navLinks) {
      hamburgerBtn.addEventListener('click', () => {
        toggleMenu();
      });

      // NEW: Logic to close menu when any nav link is clicked
      const links = navLinks.querySelectorAll('a');
      links.forEach(link => {
        link.addEventListener('click', () => {
          // Only close if the menu is actually open
          if (navLinks.classList.contains('is-open')) {
            toggleMenu();
          }
        });
      });
    }

    // --- Reusable Function to Open/Close Menu ---
    function toggleMenu() {
      const isOpen = navLinks.classList.toggle('is-open');
      hamburgerBtn.setAttribute('aria-expanded', isOpen.toString());
    }
  });
</script>

<style>
  header {
    padding: 1rem 2rem;
    border-bottom: 1px solid var(--border-color);
    position: relative; /* Needed for menu positioning */
    z-index: 100;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  .logo {
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--dark-navy);
    text-decoration: none;
    z-index: 101; /* Ensure logo is above the mobile menu */
  }
  .nav-links {
    display: flex;
    gap: 2rem;
  }
  .nav-links a {
    color: var(--text-color);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
  }
  
  /* Hamburger Menu Button (hidden on desktop) */
  .hamburger-menu {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 101; /* Ensure button is above the mobile menu */
    padding: 0;
  }
  .hamburger-menu span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: var(--dark-navy);
    margin: 5px 0;
    transition: all 0.3s ease-in-out;
  }
  
  /* --- Mobile Styles --- */
  @media (max-width: 768px) {
    /* Show hamburger button */
    .hamburger-menu {
      display: block;
    }
    
    /* Style the mobile navigation menu */
    .nav-links {
      position: fixed;
      top: 0;
      right: 0;
      width: 100%;
      height: 100vh;
      background-color: white;
      
      /* Hide it off-screen by default */
      transform: translateX(100%);
      transition: transform 0.3s ease-in-out;

      /* Change layout to vertical */
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
    }
    
    /* Make the menu slide in when open */
    .nav-links.is-open {
      transform: translateX(0);
    }
    
    .nav-links a {
      font-size: 1.5rem; /* Bigger text for mobile menu */
    }
    
    /* Animate hamburger to an 'X' when open */
    .hamburger-menu[aria-expanded="true"] span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    .hamburger-menu[aria-expanded="true"] span:nth-child(2) {
      opacity: 0;
    }
    .hamburger-menu[aria-expanded="true"] span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -7px);
    }
  }
</style>